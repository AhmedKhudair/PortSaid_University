<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:id="@+id/mycard"
    app:layout_width="match_parent"
    app:layout_height="200dp"
    app:layout_margin="8dp"
    tools:ignore="NamespaceTypo">

    <RelativeLayout
        app:background="#fff"
        app:layout_width="match_parent"
        app:layout_height="match_parent">

        <TextView
            app:gravity="center"
            app:textColor="#005ca5"
            app:id="@+id/titleRec"
            app:paddingLeft="5dp"
            app:paddingRight="5dp"
            app:layout_width="wrap_content"
            app:layout_height="wrap_content"
            app:layout_marginBottom="60dp"
            app:text="HeadLine"
            app:layout_centerHorizontal="true"
            app:layout_centerVertical="true" />

        <TextView
            app:textSize="9dp"
            app:textColor="#8f8e8e"
            app:id="@+id/daterec"
            app:paddingLeft="10dp"
            app:paddingRight="10dp"
            app:layout_width="wrap_content"
            app:layout_height="wrap_content"
            app:layout_marginBottom="12dp"
            app:text="20/20/2016"
            app:layout_alignParentLeft="true"
            app:layout_alignParentBottom="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>